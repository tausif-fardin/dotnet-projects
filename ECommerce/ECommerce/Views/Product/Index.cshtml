
@{
    ViewBag.Title = "Index";
}

<h2>Product List</h2>

<div>
    <table class="table table-bordered">
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Price</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        @foreach(var p in Model)
            {
    <tr>
        <th>@p.ProductId</th>
        <th>@p.ProductName</th>
        <th>@p.Price</th>
        <td><a class="btn btn-info" href="/Product/Edit/@p.ProductId">Edit</a></td>
        <td><a class="btn btn-danger" href="/Product/Delete/@p.ProductId">Delete</a></td>
        <th> <a href="@Url.Action("Buy", "Cart", new { id = p.ProductId })">Add to Cart</a></th>
    </tr>
            }

    </table>
</div>
